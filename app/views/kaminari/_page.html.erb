<% if page.current? %>
  <li class="page current">
    <%= link_to_if page.current?, page, url, {remote: remote, rel: page.rel, class: "block py-[9px] w-8 h-8 bg-primary drop-shadow-xl text-xs text-white font-bold text-center leading-none" } %>
  </li>
<% else %>
  <li class="page">
    <%= link_to_unless page.current?, page, url, {remote: remote, rel: page.rel, class: "block py-[9px] w-8 h-8 bg-white drop-shadow-xl text-xs text-primary font-bold text-center leading-none" } %>
  </li>
<% end %>
