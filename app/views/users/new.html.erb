<div class="bg-primary-content min-h-screen">
  <div class="flex flex-col w-1/2 border-opacity-50 mx-auto pt-40">
  <script src="https://accounts.google.com/gsi/client" async defer></script>
    <div class="card bg-white rounded-box shadow-xl place-items-center text-center">
      <div class="flex flex-col p-2">
          <h2 class="text-lg">会員登録</h2>
          <%= link_to "メールアドレスで登録", register_mail_users_path ,{class: "btn btn-primary w-80 text-white mt-4"} %>
          <%= link_to "ゲストで登録", guest_login_path, {data: { turbo_method: :post }, class: "btn btn-black w-80 text-white my-4"} %>
          <div id="g_id_onload"
          data-client_id=<%=ENV['GOOGLE_CRIENT_ID']%>
          data-login_uri="https://schedule-day-off.herokuapp.com/google_login_api/callback"
          data-auto_prompt="false">
          </div>
          <div class="g_id_signin"
          data-type="standard"
          data-size="large"
          data-theme="standard"
          data-text="sign_up_with"
          data-shape="rectangular"
          data-logo_alignment="left"
          data-width=320>
          </div>
      </div>
    </div>
    <div class="divider"></div>
    <div class="card bg-white rounded-box shadow-xl place-items-center text-center">
      <div class="flex flex-col p-2">
          <h2 class="text-lg">アカウントをお持ちの方</h2>
          <%= link_to "ログイン", login_path, {class: "btn btn-secondary w-80 text-white my-4"} %>
      </div>
    </div>
  </div>
</div>
