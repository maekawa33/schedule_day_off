<div class="bg-primary-content h-screen">
    <div class="container w-1/4 mx-auto pt-40">
        <h1 class="text-3xl">メールアドレス登録</h1>
        <%= form_with(model: @user,class: "flex flex-col gap-2")  do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div>
                <%= f.label :name, class: "label" %>
                <%= f.text_field :name, class: "input input-bordered input-primary w-full max-w-xs" %>
            </div>
            <div>
                <%= f.label :email, class: "label" %>
                <%= f.email_field :email, class: "input input-bordered input-primary w-full max-w-xs" %>
            </div>
            <div>
                <%= f.label :avatar, class: "label" %>
                <%= f.file_field :avatar %>
            </div>
            <div>
                <%= f.label :password, class: "label" %>
                <%= f.password_field :password, class: "input input-bordered input-primary w-full max-w-xs" %>
            </div>
            <div>
                <%= f.label :password_confirmation, class: "label" %>
                <%= f.password_field :password_confirmation, class: "input input-bordered input-primary w-full max-w-xs" %>
            </div>
            <div class="ml-auto mt-4 mr-10">
                <%= f.submit class: "btn btn-primary text-white" %>
            </div>
        <% end %>
    </div>
</div>
