<div class="wrapper bg-primary-content min-h-screen">
    <header>
        <%= render 'search', q: @q %>
    </header>
    <div class="wrapper md:flex">
        <main class="md:w-3/4">
            <div class="container mx-auto p-4">
                <div class="flex flex-col gap-4 justify-center">
                    <%= render @schedules %>
                </div>
                <div class="flex justify-center py-8">
                    <%= paginate(@schedules) %>
                </div>
            </div>
        </main>
        <aside class="md:w-1/4">
            <div class="container p-4">
                <h2 class="font-bold text-xl mb-4"><%= t('.popular_tags') %></h2>
                <div class="md:flex md:flex-col gap-2">
                <% @schedule_tag_ranks.each do |tag| %>
                    <%= render 'tags/tag', tag: %>
                <% end %>
                 </div>
            </div>
        </aside>
    </div>
</div>
